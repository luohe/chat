.navbar.navbar-defauld.navbar-fixed-top
  .container
    .navbar-header
      a.navbar-brand(href="/") 农家小院
    if user
      p.navbar-text.navbar-right
        span 欢迎您，
        span.userName #{user.name}
        span &nbsp;|&nbsp;
        a.navbar-link(href="/logout") 退出
    else
      p.navbar-text.navbar-right
        a.navbar-link(href="#",data-toggle="modal",data-target="#signupModal") 注册
        span &nbsp;|&nbsp;
        a.navbar-link(href="#",data-toggle="modal",data-target="#signinModal") 登录
#signupModal.modal.fade
  .modal-dialog
    .modal-content
      form(method="POST",action="/user/signup")
        .modal-header 注册
        .modal-body
          .form-group
            label.label-control(for="signupName") 用户名
            input.form-control#signupName(name="user[name]",type="text")
          .form-group
            label.label-control(for="signupWord") 密码
            input.form-control#signupWord(name="user[password]",type="text")
        .modal-footer
          button.btn.btn-default(type="button",data-dismiss="modal") 关闭
          button.btn.btn-primary(type="submit") 提交
